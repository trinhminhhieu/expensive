block content
  main.main
    .login-form
      h2.heading-secondary.ma-bt-lg Please enter your email address
      form.form.form__forgotpassword
        .form__group
          label.form__label(for='email') Email address
          input#email.form__input(type='email', placeholder='you@example.com', required)
        .form__group
          button.btn.btn--green Send